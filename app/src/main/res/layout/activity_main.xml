<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.opilane.konetuvastus.MainActivity">

    <Button
        android:id="@+id/bstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bspeak"
        android:layout_alignLeft="@+id/bspeak"
        android:layout_alignStart="@+id/bspeak"
        android:text="stop"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="268dp"
        android:onClick="TTS"/>

    <Button
        android:id="@+id/bspeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:text="speak"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="183dp"
        android:onClick="TTS"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bstop"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>
